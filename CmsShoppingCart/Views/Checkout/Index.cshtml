@using System.Security.Claims;
@model OrderViewModel

@{
    ViewData["Title"] = "Checkout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h2 class="mt-4">Checkout</h2>
            <form asp-controller="Checkout" asp-action="PlaceOrder" method="post">
                <div class="card mt-4">
                    <div class="card-body">
                        <h4 class="card-title">Billing Information</h4>
                        <div class="form-group">
                            <label for="Name">Name</label>
                            <input type="text" class="form-control" id="Name" placeholder="Full Name" asp-for="Order.Name">
                        </div>
                        <div class="form-group">
                            <label for="Address">Address</label>
                            <input type="text" class="form-control" id="Address" placeholder="Address" asp-for="Order.Adress">
                        </div>
                        <div class="form-group">
                            <label for="Description">Order Description</label>
                            <textarea class="form-control" id="Description" asp-for="Order.Description"></textarea>
                        </div>
                        <div class="form-group">
                            <label>Payment Method:</label>
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="PayOnDelivery" disabled checked value="delivery" asp-for="Order.PaymentMethod">
                                <label class="custom-control-label" for="PayOnDelivery">Pay On Delivery</label>
                            </div>
                        </div>
                    </div>
                </div>

